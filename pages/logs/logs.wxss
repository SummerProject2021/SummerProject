body{
  background-color:#8f8ccf;
  color: white;
  height: 1000px;
  overflow: scroll;
}
.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  color: black;
}
.log-item {
  margin: 10rpx;
}
.container{
  background-color: #8f8ccf;
  color: white;
  margin-top: 0;
  margin-bottom: 0;
}
.box{
  margin:-50px;
  width:80%;
  height: auto;
  padding: 10px;
  background-color: #eeebdd;
  overflow: scroll; 
  border-radius: 10px;
}
.question{
  margin-left: 10px;
  margin-top: 20px;
  color: black;
}
.input{
  margin-top: 30px;
  margin-left: 10px;
  margin-right: 10px;
  padding: 5px;
  border: 5px solid black;
  border-radius: 10px;
  height: 100px;
  width: auto;
  color: black;
  overflow-y: scroll;
  background-color: white;
}
button{
  display: inline;
  margin: 20px 3px 3px 10px; 
}
.button{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.normal_button{
  background: black;
  color: white;
}
.checked_button{
  background: #241E92;
  color: white;
}
button.submit{
  margin: auto;
  display: block;
  width: 10px;
  height: auto;
  background-color: #eeebdd;
  color: black;
}
.submit_hover{
  margin: auto;
  display: block;
  width: 10px;
  height: auto;
  background-color: white;
  color: green;
}
.bin{
  width: 20px;
  height: 20px;
  margin: auto;
  margin-top: 30px;
  display: flex;
}
.pop{
  width: 90%;
  height: 10%;
  position: fixed;
  top: 200px;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #241E92;
  border-radius:10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pop .text{
  align-items: center;
  color: white;
  font-size: 25PX;
  text-align: center;
  margin-top: 4%;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}