/**index.wxss**/
.window{
  background-color: black;
  color: white;
  display: flex;
  flex-wrap: wrap;
}
image{
  width: 100%;
  height: 100%;
  background-size: contain;
  color: white;
}
.card{
  width: auto;
  height: 500rpx;
  padding: 10rpx;
  background-color: #630000;
  border: 4rpx solid black;
  border-radius: 10px;
  color: white;
}
.daily{
  width: auto;
  height: auto;
  padding: 10rpx;
  background-color: #EEEBDD;
  border: 4rpx solid black;
  border-radius: 10rpx;
  color: black;
}
.right{
  display: flex;
  flex-direction: column;
  float: right;
  width: 50%;
}
.left{
  display: flex;
  flex-direction: column;
  float: left;
  width: 50%;
}
text{
  display: block;
}