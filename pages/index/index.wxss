.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.window{
  background-color: black;
  color: white;
  display: flex;
  flex-wrap: wrap;
}
.card{
  width: 46%;
  height: 200px;
  padding: 4px;
  background-color: #630000;
  border: 2px solid black;
  border-radius: 10px;
  color: white;
}
image{
  width: 100%;
  height: 100%;
  background-size: contain;
  color: white;
}